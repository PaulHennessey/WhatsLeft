@model  WhatsLeft.Models.CreateRegularPaymentViewModel


@using (Html.BeginForm("CreateRegularPayment", "Home", FormMethod.Post, new { @role = "form" }))
{
    @Html.ValidationSummary(true)

    <div class="form-group row">
        @Html.LabelFor(m => Model.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => Model.PaymentDay, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.PaymentDay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PaymentDay)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => Model.Amount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => Model.Amount, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Amount)
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-12">
            <button id="singlebutton" name="singlebutton" class="btn btn-primary">Create</button>
        </div>
    </div>

    @Html.HiddenFor(model => model.BankAccountId)
}

<div>
    @Html.ActionLink("Back to account", "Details", new { accountId = Model.BankAccountId })
</div>